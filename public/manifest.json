{
  "manifest_version": 3,
  "name": "Grammer-examiner",
  "short_name": "G-E",
  "version": "0.0.1",
  "description": "Grammer-examiner - Grammar correction through AI for efficient English learning anytime, anywhere!",
  "icons": {
    "16": "/icons/ge.png",
    "32": "/icons/ge.png",
    "48": "/icons/ge.png",
    "192": "/icons/ge.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "<all_urls>"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "inject.js"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html"
  }
}